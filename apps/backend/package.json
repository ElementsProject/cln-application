{
  "name": "cln-application-backend",
  "version": "25.12",
  "description": "Core lightning application backend",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/ && prettier --write source/ && tsc --project tsconfig.json",
    "serve": "node ./dist/server.js",
    "start": "tsc --project tsconfig.json --watch & prettier --write source/ & nodemon ./dist/server.js",
    "watch": "tsc --project tsconfig.json --watch & prettier --write source/",
    "lint": "eslint source --ext .js,.ts"
  },
  "dependencies": {
    "axios": "1.13.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "csurf": "1.11.0",
    "express": "5.1.0",
    "express-winston": "4.2.0",
    "jsonwebtoken": "9.0.2",
    "lnmessage": "0.2.7",
    "protobufjs": "7.5.4",
    "ts-node": "10.9.2",
    "winston": "3.18.3",
    "ws": "8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/cookie-parser": "1.4.10",
    "@types/cors": "2.8.19",
    "@types/csurf": "1.11.5",
    "@types/express": "5.0.5",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "eslint": "9.39.1",
    "eslint-plugin-node-dependencies": "1.3.0",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.5.0",
    "nodemon": "3.1.11",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "overrides": {
    "chalk": "4.1.2",
    "strip-ansi": "6.0.1",
    "color-convert": "2.0.1",
    "color-name": "1.1.4",
    "is-core-module": "2.13.1",
    "error-ex": "1.3.2"
  }
}
